<div class="posts">
  <% 3.times.each do |i| %>
    <% post = @posts[i] %>
    <div class="post <%= post.nil? ? 'empty' : '' %>">
      <div class="overlay">
        <i class="fa fa-plus-circle"></i>
        <i class="fa fa-pencil-square-o"></i>
        <form action="#" class="url_box">
          <input type="text" class="url" />
          <div class="buttons">
            <button class="submit" type="submit" value="submit">OK</button>
            <a href="#" class="cancel">Cancel</a>
          </div>
        </form>
      </div>
      <div class="content">
        <% unless post.nil? %>
          <%= link_to image_tag(post["leftOfHeadline"]["src"]), post["permalink"] %>
          <%= link_to content_tag(:h3, post["headline"]), post["permalink"] %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

