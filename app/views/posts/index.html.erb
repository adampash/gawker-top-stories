<div class="posts">
  <h4>Click to change stories. Drag and drop to reorder.</h4>
  <% 3.times.each do |i| %>
    <% post = @posts[i] %>
    <div class="post <%= (post.nil? or post.empty?) ? 'empty' : '' %>" data-url="<%= post.nil? ? "" : post["permalink"] %>">
      <div class="overlay">
        <i class="fa fa-plus-circle"></i>
        <i class="fa fa-pencil-square-o"></i>
        <form action="#" class="url_box hide">
          <input placeholder="Paste a link to a post" type="text" class="url" value="<%= (post.nil? or post.empty?) ? "" : post["permalink"] %>" />
          <div class="buttons">
            <button class="submit" type="submit" value="submit">OK</button>
            <a href="#" class="cancel">Cancel</a>
          </div>
        </form>
      </div>
      <div class="content">
        <% unless post.nil? or post.empty? %>
          <%= link_to image_tag(post["leftOfHeadline"]["src"]), post["permalink"] %>
          <%= link_to content_tag(:h3, raw(post["headline"])), post["permalink"] %>
        <% else post.nil? %>
          <%= link_to image_tag(""), "" %>
          <%= link_to content_tag(:h3, ""), "" %>
        <% end %>
      </div>
    </div>
  <% end %>
  <br clear="all">
  <button class="save_page">Save your new top stories</button>
  <div class="message"></div>
</div>

  <%= react_component(
    'Builder',
    {
      posts: @posts
    },
  ) %>
  <br clear="all" />
<div class="preview">
  <%= react_component(
    'Main',
    {
      stories: @posts
    },
    {prerender: true}
  ) %>
</div>
